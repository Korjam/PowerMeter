<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.progressBarr" parent="android:Widget.Material.ProgressBar.Large">
        <item name="android:progressTint">@color/colorAccentLight</item>
        <item name="android:progressBackgroundTint">@color/colorAccentLight</item>
        <item name="android:indeterminateTint">@color/colorAccentLight</item>
    </style>
</resources>
